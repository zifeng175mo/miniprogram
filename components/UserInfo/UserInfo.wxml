<view class="user-info">
    <view class="avatar-style">
        <van-image
          src="{{avatar}}"
          class="img"
          round="{{true}}"
          width="90"
          height="90"
        />
        <view class="nick-name">{{ name }}</view>
    </view>
    <van-cell-group border="{{ false }}" >
        <van-cell icon="chat-o" title="消息" is-link url="/pages/message/message" border="{{ false }}" class="message" />
        <van-cell icon="bar-chart-o" title="统计" is-link url="/pages/statistics/statistics" border="{{ false }}" class="statistics"/>
        <van-cell icon="friends-o" title="关于" is-link url="/pages/about/about" border="{{ false }}" class="about" />
        <van-cell icon="question-o" title="帮助" is-link url="/pages/help/help" border="{{ false }}" class="help"/>
        <van-cell icon="comment-o" title="吐槽" is-link url="/pages/feedback/feedback" border="{{ false }}" class="feedback" />
    </van-cell-group>
</view>
